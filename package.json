{
  "private": true,
  "description": "goatRPC monorepo",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "9.0.1",
    "nodemon": "3.1.7",
    "pkgroll": "2.5.0",
    "rimraf": "6.0.1",
    "sort-package-json": "2.10.1",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
  },
  "scripts": {
    "symlink": "npx --workspaces tsx $(pwd)/scripts/symlink.ts $(pwd)",
    "postinstall": "npm run symlink",
    "format": "npm run format:package-json",
    "format:package-json": "npx --workspaces sort-package-json"
  }
}
